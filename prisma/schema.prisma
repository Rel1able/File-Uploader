generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  folder Folder[]
  file File[]
}

model Folder {
  id         Int    @id @default(autoincrement())
  foldername String
  File File[]
  user  User?  @relation(fields: [userId], references: [id])
  userId  Int?
}

model File {
  id         Int      @id @default(autoincrement())
  filename   String
  fileUrl  String
  size       Int
  uploadTime DateTime @default(now())
  folder     Folder?   @relation(fields: [folderId], references: [id])
  folderId   Int?
  user  User?  @relation(fields: [userId], references: [id])
  userId Int?
}
